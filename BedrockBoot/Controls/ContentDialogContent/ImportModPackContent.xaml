<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BedrockBoot.Controls.ContentDialogContent.ImportModPackContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BedrockBoot.Controls.ContentDialogContent"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:dev="using:DevWinUI"
    mc:Ignorable="d">

    <StackPanel>
        <TextBlock Text="包路径" Margin="0,0,0,8"/>
        <dev:ElementGroup HorizontalAlignment="Stretch">
            <TextBox x:Name="Pack_Path_Box" Width="278"/>
            <Button Content="{dev:FontIcon Glyph=&#xE838;}"
                    Click="Button_Click"/>
        </dev:ElementGroup>

        <ComboBox HorizontalAlignment="Stretch"
                  Margin="0,8,0,0"
                  x:Name="VersionsList"
                  Header="目标版本"></ComboBox>

        <ComboBox HorizontalAlignment="Stretch"
                  Margin="0,8,0,0"
                  x:Name="PackType_Box"
                  SelectedIndex="0"
                  Header="包类型">
            <ComboBoxItem>普通 Mod</ComboBoxItem>
            <ComboBoxItem>延迟加载 Mod</ComboBoxItem>
        </ComboBox>
    </StackPanel>
</Page>
