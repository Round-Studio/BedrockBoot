<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="BedrockBoot.Controls.FontIconButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dev="using:DevWinUI"
    xmlns:local="using:BedrockBoot.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <Button
        Width="42"
        Height="42"
        Margin="4"
        Padding="0"
        Style="{ThemeResource SubtleButtonStyle}"
        ToolTipService.ToolTip="{x:Bind PersonName}">
        <PersonPicture
            Width="32"
            Height="32"
            Margin="0,0,0,0"
            ProfilePicture="{x:Null}" />
        <Button.Flyout>
            <Flyout>
                <Grid
                    Width="256"
                    Height="128"
                    Margin="-24,-24,-24,-24"
                    Padding="0">
                    <StackPanel Margin="16" Orientation="Vertical">
                        <TextBlock
                            Margin="0,0,0,8"
                            Style="{ThemeResource SubtitleTextBlockStyle}"
                            Text="{x:Bind PersonName}" />
                        <ContentControl Content="{x:Bind FlyoutContent}" />
                    </StackPanel>
                    <dev:OpacityMaskView
                        Width="128"
                        Height="128"
                        MaxHeight="500"
                        Padding="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                        <dev:OpacityMaskView.OpacityMask>
                            <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Offset="1" Color="#FFFFFFFF" />
                                <GradientStop Offset="0.2" Color="Transparent" />
                            </LinearGradientBrush>
                        </dev:OpacityMaskView.OpacityMask>
                        <FontIcon
                            Width="128"
                            Height="128"
                            Margin="0,0,-16,0"
                            HorizontalAlignment="Right"
                            FontSize="32"
                            Glyph="{x:Bind ShowIcon}" />
                    </dev:OpacityMaskView>
                </Grid>
            </Flyout>
        </Button.Flyout>

    </Button>
</UserControl>
